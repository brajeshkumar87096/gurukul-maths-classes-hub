# ====================
# ENVIRONMENT SETTINGS
# ====================
# Set to 'prod' for production, 'dev' for development
SPRING_PROFILES_ACTIVE=dev

# ===============
# SERVER SETTINGS
# ===============
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/

# ================
# DATABASE SETTINGS
# ================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gurukul_maths_hub
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=10
DB_POOL_MIN_IDLE=2

# ================
# JWT SETTINGS
# ================
JWT_SECRET=your-256-bit-secret-change-this-in-production
JWT_EXPIRATION_MS=86400000 # 24 hours

# ================
# CORS SETTINGS
# ================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ================
# EMAIL SETTINGS
# ================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# =================
# FRONTEND SETTINGS
# =================
FRONTEND_URL=http://localhost:5173

# =================
# ADMIN CREDENTIALS
# =================
ADMIN_EMAIL=admin@gurukulmaths.com
ADMIN_INITIAL_PASSWORD=ChangeMe123!

# =================
# LOGGING SETTINGS
# =================
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_BINDER=TRACE

# =================
# UPLOAD SETTINGS
# =================
UPLOAD_DIR=uploads/
MAX_FILE_SIZE=10MB

# =================
# CACHE SETTINGS
# =================
SPRING_CACHE_TYPE=simple

# =================
# ASYNC SETTINGS
# =================
SPRING_TASK_EXECUTION_POOL_CORE_SIZE=5
SPRING_TASK_EXECUTION_POOL_MAX_SIZE=20
SPRING_TASK_EXECUTION_QUEUE_CAPACITY=100

# =================
# ACTUATOR SETTINGS
# =================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized
MANAGEMENT_ENDPOINT_HEALTH_ROLES=ADMIN
